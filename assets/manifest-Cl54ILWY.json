{
    "name": "Mini's IPA Repo",
    "short_name": "MinisRepo",
    "description": "Premium tweaked iOS applications for iOS 15+. Featuring EeveeSpotify, YTLite, and more.",
    "start_url": "./",
    "scope": "./",
    "id": "minis-ipa-repo",
    "display": "standalone",
    "display_override": ["standalone", "minimal-ui"],
    "orientation": "any",
    "background_color": "#000000",
    "theme_color": "#000000",
    "categories": ["utilities", "entertainment"],
    "prefer_related_applications": false,
    "icons": [
        {
            "src": "apps/repo-icon.png",
            "sizes": "192x192",
            "type": "image/png",
            "purpose": "any"
        },
        {
            "src": "apps/repo-icon.png",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "any"
        },
        {
            "src": "apps/repo-icon.png",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "maskable"
        }
    ],
    "screenshots": [
        {
            "src": "apps/repo-icon.png",
            "sizes": "512x512",
            "type": "image/png",
            "form_factor": "narrow",
            "label": "Mini's IPA Repo â€” Browse tweaked iOS apps"
        }
    ],
    "shortcuts": [
        {
            "name": "Browse Apps",
            "short_name": "Apps",
            "description": "View all available tweaked apps",
            "url": "./?source=shortcut",
            "icons": [
                {
                    "src": "apps/repo-icon.png",
                    "sizes": "192x192",
                    "type": "image/png"
                }
            ]
        },
        {
            "name": "Search Apps",
            "short_name": "Search",
            "description": "Search for a specific app",
            "url": "./?action=search&source=shortcut",
            "icons": [
                {
                    "src": "apps/repo-icon.png",
                    "sizes": "192x192",
                    "type": "image/png"
                }
            ]
        },
        {
            "name": "Music Apps",
            "short_name": "Music",
            "description": "Browse music-related tweaked apps",
            "url": "./?category=Music&source=shortcut",
            "icons": [
                {
                    "src": "apps/repo-icon.png",
                    "sizes": "192x192",
                    "type": "image/png"
                }
            ]
        },
        {
            "name": "Video Apps",
            "short_name": "Video",
            "description": "Browse video-related tweaked apps",
            "url": "./?category=Video&source=shortcut",
            "icons": [
                {
                    "src": "apps/repo-icon.png",
                    "sizes": "192x192",
                    "type": "image/png"
                }
            ]
        }
    ],
    "share_target": {
        "action": "./",
        "method": "GET",
        "params": {
            "title": "name",
            "text": "search",
            "url": "url"
        }
    },
    "file_handlers": [
        {
            "action": "./",
            "accept": {
                "application/octet-stream": [".ipa"]
            }
        }
    ]
}
